@{
    ViewBag.Title = "Inicio";
}

<div class="home-container">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="text-white">Monitorización Inteligente de Invernaderos</h1>
                <p class="hero-description text-white">Optimiza el rendimiento de tus cultivos con nuestra plataforma de monitorización en tiempo real. Controla temperatura, humedad y más variables críticas desde cualquier lugar.</p>
                @if (!Request.IsAuthenticated)
                {
                    <div class="hero-buttons">
                        @Html.ActionLink("Empezar ahora", "Register", "Account", null, new { @class = "btn btn-primary btn-lg" })
                        @Html.ActionLink("Ver demostración", "Contact", "Home", null, new { @class = "btn btn-outline-light btn-lg" })
                    </div>
                }
            </div>
            <div class="hero-image">
                <img src="~/Content/Images/Invernadero2.jpg" alt="Dashboard Preview" class="dashboard-preview"/>
            </div>
        </div>
    </section>

    <!-- Beneficios Section -->
    <section class="benefits-section">
        <h2>¿Por qué elegir SMGreen?</h2>
        <div class="benefits-grid">
            <div class="benefit-card">
                <div class="benefit-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3>Monitorización 24/7</h3>
                <p>Seguimiento continuo de tus cultivos con alertas en tiempo real ante cualquier anomalía.</p>
            </div>

            <div class="benefit-card">
                <div class="benefit-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>Análisis Avanzado</h3>
                <p>Visualiza tendencias y patrones con nuestras gráficas interactivas y reportes detallados.</p>
            </div>

            <div class="benefit-card">
                <div class="benefit-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h3>Acceso Remoto</h3>
                <p>Gestiona tus invernaderos desde cualquier dispositivo, en cualquier momento y lugar.</p>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="feature-showcase">
            <div class="feature-content">
                <h2>Control Total de tus Sensores</h2>
                <ul class="feature-list">
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Monitorización de temperatura y humedad en tiempo real</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Sistema de alertas personalizable</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Histórico de datos y generación de informes</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle"></i>
                        <span>Gestión multi-invernadero</span>
                    </li>
                </ul>
                @if (!Request.IsAuthenticated)
                {
                    @Html.ActionLink("Comenzar prueba gratuita", "Register", "Account", null, new { @class = "btn btn-success btn-lg mt-4" })
                }
            </div>
            <div class="feature-image">
                <img src="~/Content/Images/Grafica.png" alt="Sensores Preview" class="sensors-preview"/>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="cta-content">
            <h2>Optimiza tus Cultivos Hoy</h2>
            <p class="cta-description text-white">Únete a cientos de agricultores que ya confían en SMGreen para el control de sus invernaderos</p>
            @if (!Request.IsAuthenticated)
            {
                @Html.ActionLink("Crear cuenta gratuita", "Register", "Account", null, new { @class = "btn btn-primary btn-lg pulse-button" })
            }
            else
            {
                @Html.ActionLink("Ir al Dashboard", "Index", "Account", null, new { @class = "btn btn-primary btn-lg" })
            }
        </div>
    </section>
</div>
