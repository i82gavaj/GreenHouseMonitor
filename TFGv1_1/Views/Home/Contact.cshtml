@{
    ViewBag.Title = "Contacto";
}

<div class="form-section">
    <div class="form-card">
        <div class="form-header">
            <h2 class="form-title text-white">
                <i class="fas fa-envelope me-2"></i>@ViewBag.Title
            </h2>
            <p class="form-subtitle text-white">¿Tienes alguna pregunta? Contáctanos</p>
        </div>

        <div class="form-content">
            <div class="contact-info mb-4">
                <div class="info-item">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    <div>
                        <h4>Ubicación</h4>
                        <p>Escuela Técnica Superior de Ingeniería Informática<br />
                        Av. Reina Mercedes, s/n, 41012 Sevilla</p>
                    </div>
                </div>

                <div class="info-item">
                    <i class="fas fa-phone me-2"></i>
                    <div>
                        <h4>Teléfono</h4>
                        <p>+34 954 55 68 17</p>
                    </div>
                </div>

                <div class="info-item">
                    <i class="fas fa-envelope me-2"></i>
                    <div>
                        <h4>Email</h4>
                        <p>sensorhub@support.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>