@model TFGv1_1.Models.Sensor

@{
    ViewBag.Title = "Eliminar Sensor";
}

<div class="container mt-4">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Eliminar Sensor</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning delete-warning">
                <h4 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>¿Está seguro que desea eliminar este sensor?</h4>
                <p>Esta acción no se puede deshacer y eliminará todos los datos asociados a este sensor, incluyendo:</p>
                <ul>
                    <li><strong>El archivo de log</strong> asociado a este sensor</li>
                    <li><strong>Todos los datos históricos</strong> registrados por este sensor</li>
                </ul>
                <p class="mt-2 mb-0"><strong>Esta operación es irreversible.</strong></p>
            </div>
            
            <div class="details-card mb-4">
                <div class="details-header bg-light">
                    <h5 class="mb-0">Detalles del Sensor</h5>
                </div>
                <div class="details-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-microchip"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">@Html.DisplayNameFor(model => model.SensorName):</label>
                                    <span>@Html.DisplayFor(model => model.SensorName)</span>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-thermometer-half"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">@Html.DisplayNameFor(model => model.SensorType):</label>
                                    <span>@Html.DisplayFor(model => model.SensorType)</span>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-ruler"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">@Html.DisplayNameFor(model => model.Units):</label>
                                    <span>@Html.DisplayFor(model => model.Units)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-project-diagram"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">Invernadero:</label>
                                    <span>@Html.DisplayFor(model => model.GreenHouse.Name)</span>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-map-pin"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">@Html.DisplayNameFor(model => model.Topic):</label>
                                    <span>@Html.DisplayFor(model => model.Topic)</span>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">Propietario:</label>
                                    <span>@Html.DisplayFor(model => model.GreenHouse.User.LastName), @Html.DisplayFor(model => model.GreenHouse.User.Name)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <div class="form-actions d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Eliminar Sensor
                    </button>
                </div>
            }
        </div>
    </div>
</div>

