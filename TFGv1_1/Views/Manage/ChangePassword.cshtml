@model TFGv1_1.Models.ChangePasswordViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewBag.Title</h2>

                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="card-title mb-3 text-center">Cambiar la contraseña de su cuenta</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger text-center" })
                        
                        <div class="form-group mb-3 mx-auto" style="max-width: 400px;">
                            @Html.LabelFor(m => m.OldPassword, new { @class = "form-label text-center d-block" })
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control text-center" })
                        </div>

                        <div class="form-group mb-3 mx-auto" style="max-width: 400px;">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "form-label text-center d-block" })
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control text-center" })
                        </div>

                        <div class="form-group mb-3 mx-auto" style="max-width: 400px;">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label text-center d-block" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center" })
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Cambiar contraseña</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    .form-control {
        border-radius: 5px;
        margin: 0 auto;
    }
    .btn-primary {
        padding: 8px 25px;
        border-radius: 5px;
    }
    .form-label {
        margin-bottom: 0.5rem;
    }
</style>
