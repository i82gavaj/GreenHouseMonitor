<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SensorHub</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <!-- Botón Toggle -->
        <button class="toggle-btn" id="toggleBtn">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sidebar -->
        <div class="sidebar @(ViewContext.RouteData.Values["Controller"].ToString() == "Account" && 
                              ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" 
             id="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-tachometer-alt me-2"></i>Panel de Control</h3>
            </div>
            <ul class="sidebar-menu">
                <li>
                    <a href="@Url.Action("Graphs", "Sensor")">
                        <i class="fa fa-line-chart"></i>
                        <span>Gráficas</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Sensor")">
                        <i class="fa fa-microchip"></i>
                        <span>Sensores</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "SensorLogFile")">
                        <i class="bi bi-file-earmark-medical"></i>
                        <span>Logs</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Manage")">
                        <i class="fas fa-user-circle"></i>
                        <span>Perfil</span>
                    </a>
                </li>
            </ul>
        </div>
    }

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <i class="fas fa-microchip me-2"></i>SensorHub
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @if (Request.IsAuthenticated)
                        {
                            <a href="@Url.Action("Index", "Account")" class="nav-link">
                                <i class="fas fa-tachometer me-1"></i>Inicio
                            </a>

                        }
                        else
                        {
                            <a href="@Url.Action("Index", "Home")" class="nav-link">
                                <i class="fas fa-home me-1"></i>Inicio
                            </a>
                        }

                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("About", "Home")" class="nav-link">
                            <i class="fas fa-info-circle me-1"></i>Acerca de
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Contact", "Home")" class="nav-link">
                            <i class="fas fa-envelope me-1"></i>Contacto
                        </a>
                    </li>
     
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content @(Request.IsAuthenticated ? "with-sidebar" : "")">
        @RenderBody()
        <footer class="bg-dark text-white text-center py-3">
            <div class="container">
                <p class="mb-0">© 2023 SensorHub. Todos los derechos reservados.</p>
                <p>
                    <a href="@Url.Action("Privacy", "Home")" class="text-white">Política de Privacidad</a> |
                    <a href="@Url.Action("Contact", "Home")" class="text-white">Contacto</a>
                </p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @if (Request.IsAuthenticated)
    {
        <script src="~/Scripts/toggle.js"></script>
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/paho-mqtt/1.0.1/mqttws31.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>