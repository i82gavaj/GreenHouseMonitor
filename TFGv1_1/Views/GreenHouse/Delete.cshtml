@model TFGv1_1.Models.GreenHouse

@{
    ViewBag.Title = "Eliminar Invernadero";
}

<div class="container mt-4">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Eliminar Invernadero</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning delete-warning">
                <h4 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>¿Está seguro que desea eliminar este invernadero?</h4>
                <p>Esta acción no se puede deshacer y eliminará todos los datos asociados a este invernadero, incluyendo:</p>
                <ul>
                    <li><strong>Todos los sensores</strong> que pertenecen a este invernadero</li>
                    <li><strong>Todos los archivos de log</strong> de cada sensor</li>
                    <li><strong>Todos los datos históricos</strong> registrados por los sensores</li>
                </ul>
                <p class="mt-2 mb-0"><strong>Esta operación es irreversible.</strong></p>
            </div>
            
            <div class="details-card mb-4">
                <div class="details-header bg-light">
                    <h5 class="mb-0">Detalles del Invernadero</h5>
                </div>
                <div class="details-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-leaf"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">@Html.DisplayNameFor(model => model.Name):</label>
                                    <span>@Html.DisplayFor(model => model.Name)</span>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">@Html.DisplayNameFor(model => model.Description):</label>
                                    <span>@Html.DisplayFor(model => model.Description)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">@Html.DisplayNameFor(model => model.Location):</label>
                                    <span>@Html.DisplayFor(model => model.Location)</span>
                                </div>
                            </div>
                            <div class="info-item mb-3">
                                <div class="info-icon">
                                    <i class="fas fa-ruler-combined"></i>
                                </div>
                                <div class="info-content">
                                    <label class="fw-bold">@Html.DisplayNameFor(model => model.Area):</label>
                                    <span>@Html.DisplayFor(model => model.Area) m²</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <div class="form-actions d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Eliminar Invernadero
                    </button>
                </div>
            }
        </div>
    </div>
</div>


