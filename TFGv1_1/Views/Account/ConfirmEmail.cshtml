@{
    ViewBag.Title = "Confirmación Exitosa";
}

<div class="confirm-email-container">
    <div class="confirm-email-icon">
        <i class="fas fa-check-circle fa-4x text-success"></i>
    </div>
    <h2 class="confirm-email-title">@ViewBag.Title</h2>
    <div class="card">
        <div class="card-body">
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> 
                <strong>¡Excelente!</strong> Su dirección de correo electrónico ha sido confirmada con éxito.
            </div>
            <p class="confirm-email-message">
                Gracias por verificar su cuenta. Ahora puede acceder a todas las funcionalidades de la plataforma.
            </p>
            <button onclick="location.href='@Url.Action("Login", "Account")'" class="btn btn-success mt-3">
                <i class="fas fa-sign-in-alt"></i> Iniciar sesión
            </button>
        </div>
    </div>
</div>
