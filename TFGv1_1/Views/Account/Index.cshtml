@using TFGv1_1.Models
@{
    ViewBag.Title = "Dashboard Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-container">
    <!-- Contenido Principal -->
    <div class="main-content">
        <div class="dashboard-welcome">
            <h2><i class="fas fa-home me-2"></i>Centro de Control</h2>
            <p>Bienvenido a tu panel de administración. Aquí podrás gestionar todos los aspectos de tu sistema de sensores.</p>
        </div>

        <div class="quick-tips">
            <h3><i class="fas fa-lightbulb me-2"></i>Consejos Rápidos</h3>
            <div class="tips-grid">
                <div class="tip-card">
                    <div class="tip-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4>Monitorización en Tiempo Real</h4>
                    <p>Visualiza los datos de tus sensores en tiempo real mediante gráficas interactivas. Configura alertas para mantenerte informado.</p>
                    <a href="@Url.Action("Graphs", "Sensor")" class="tip-link">
                        Ver Gráficas <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <div class="tip-card">
                    <div class="tip-icon">
                        <i class="fas fa-microchip"></i>
                    </div>
                    <h4>Gestión de Sensores</h4>
                    <p>Administra tus sensores, añade nuevos dispositivos y configura sus parámetros de funcionamiento.</p>
                    <a href="@Url.Action("Index", "Sensor")" class="tip-link">
                        Gestionar Sensores <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <div class="tip-card">
                    <div class="tip-icon">
                        <i class="fas fa-wifi"></i>
                    </div>
                    <h4>Conexión MQTT</h4>
                    <p>Configura la conexión con tu broker MQTT para comenzar a recibir datos de tus sensores.</p>
                    <a href="@Url.Action("Connection", "Account")" class="tip-link">
                        Configurar Conexión <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <div class="tip-card">
                    <div class="tip-icon">
                        <i class="bi bi-file-earmark-medical"></i>
                    </div>
                    <h4>Logs</h4>
                    <p>Observa los logs de los sensores que se han generado en el sistema.</p>
                    <a href="@Url.Action("Index", "SensorLogFile")" class="tip-link">
                        Ver Logs <i class="fas fa-arrow-right"></i>
                    </a>
                </div>

                <div class="tip-card">
                    <div class="tip-icon">
                        <i class="fas fa-user-cog"></i>
                    </div>
                    <h4>Perfil y Preferencias</h4>
                    <p>Personaliza tu perfil y ajusta las preferencias de tu cuenta para una mejor experiencia.</p>
                    <a href="@Url.Action("Index", "Manage")" class="tip-link">
                        Editar Perfil <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>